{% extends 'admin/base.html.twig' %}

{% block title %}
	Modification d'un commentaire
{% endblock %}

{% block body %}
	<div class="container">
		<h1>
			Modifier commentaire n°{{comment.id}}</h1>

		<div class="container alert alert-info">
			<strong>Annonce liée :</strong>
			{{comment.ad.title}}<br>
			<strong>Auteur :</strong>
			{{comment.ad.author.fullName}}<br>
			<strong>Date de création :</strong>
			{{comment.createdAt|date("d/m/Y H:i")}}<br>
			<strong>Note :</strong>
			{{comment.rating}}<br>
        </div>
        <div class="container">
            {{form_start(form)}}
            {{form_widget(form)}}
            
           <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i>
            Enregistrer
           </button>
            {{form_end(form)}}
        </div>
		</div>
	</div>
{% endblock %}
