{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Gestion des commentaires</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Auteur</th>
					<th>Commentaire</th>
					<th>Note globale</th>
					<th>Annonce</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for comment in pagination.data %}
					{% set c = comment %}
					<tr>
						<td>{{c.id}}</td>
						<td>{{c.createdAt|date("d/m/Y H:i")}}</td>
						<td>
							<img src="{{c.author.picture}}" alt="" class="avatar avatar-mini">
							{{c.author.fullName}}
						</td>
						<td>{{c.content}}</td>
						<td>
							<span class="badge badge-primary">
								{{c.ad.avgrating|round}}
							</span>
						</td>
						<td>{{c.ad.title}}</td>
						<td>
							<a href="{{path('admin_comment_edit', {'id' : c.id})}}" class="btn btn-primary">
								<i class="fas fa-pen"></i>
							</a>
							<a href="{{path("admin_comment_delete", {'id': c.id})}}" class="btn btn-danger" onclick="return confirm(`Voulez-vous vraiment supprimer le commentaire nÂ°{{comment.id}} ?`)">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{% include 'common/pagination.html.twig' with {'path' : "admin_comment" } %}
	</div>
{% endblock %}
